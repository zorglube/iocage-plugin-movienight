get()
{
	out=$(jq '$@' $CONF_FILE)
	echo "$out"
}

# Stub for something which gets settings
case $1 in
	getall) get_all ;;
	rtmpport) get "RtmpListenAddress" ;;
	listenport) get "ListenAddress" ;;
	*) echo "Unknown option" ;;
esac
